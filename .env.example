# Gr√ºnderAI Backend - Environment Variables 
# Copy this to .env and fill in your values

# Server Configuration
PORT=8000
ENVIRONMENT=development

# CORS - Frontend URLs (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/gruenderai_db

# Redis for session management
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-min-32-characters-long-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (if needed)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_ANALYTICS=false
